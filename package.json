{
  "name": "porter",
  "version": "1.0.0",
  "description": "Integrate Slack with Notion.",
  "main": "index.js",
  "private": true,
  "repository": "https://github.com/geta6/porter.git",
  "author": "geta6 <getakura@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "next build",
    "start": "yarn build && next start",
    "test": "jest $@",
    "dev": "scripty",
    "precommit": "scripty",
    "postinstall": "scripty"
  },
  "scripty": {
    "silent": true
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{png,jpg,jpeg,gif}": [
      "imagemin-lint-staged"
    ],
    "*.svg": [
      "svgo"
    ],
    "*.md": [
      "prettier --write"
    ],
    "*.json": [
      "jsonlint",
      "prettier --write"
    ]
  },
  "jest": {
    "rootDir": "./app",
    "testRegex": ".*__tests__/.+\\.(test|spec)\\.tsx?$",
    "bail": false,
    "verbose": false,
    "fakeTimers": {
      "timerLimit": 1000
    },
    "cacheDirectory": "<rootDir>/../tmp/jest",
    "coverageDirectory": "<rootDir>/../tmp/coverage",
    "collectCoverageFrom": [
      "<rootDir>/**/*.{ts,tsx,js,jsx}"
    ],
    "watchPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/tmp/"
    ]
  },
  "dependencies": {
    "@notionhq/client": "^2.2.2",
    "@slack/bolt": "^3.12.2",
    "ioredis": "^5.2.4",
    "next": "^13.0.6",
    "node-fetch": "^3.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "scripty": "^2.1.1"
  },
  "devDependencies": {
    "@babel/runtime": "^7.20.6",
    "@types/ioredis": "^5.0.0",
    "@types/jest": "^29.2.4",
    "@types/node": "^18.11.11",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.45.1",
    "@typescript-eslint/parser": "^5.45.1",
    "eslint": "^8.29.0",
    "eslint-config-next": "^13.0.6",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.11",
    "imagemin-lint-staged": "^0.5.1",
    "jest": "^29.3.1",
    "jsonlint": "^1.6.3",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.0",
    "typescript": "^4.9.3"
  }
}
